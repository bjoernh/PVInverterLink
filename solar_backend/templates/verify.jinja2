{% extends "base.jinja2" %}
{% block title %}Email verifizieren{% endblock %}
{% block content %}

    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2 class="mt-10 text-3xl font-bold leading-9 tracking-tight">{% if result %} Erfolgreich {% else %} Fehler {% endif %}</h2>
    </div>
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    {% if result %} 
    <h2>Best√§tige deine Email-Adresse mit dem Link der auf dem Weg zu dir ist!</h2><br>
    <button class="btn btn-accent btn-sm" hx-swap="none" hx-post="/auth/request-verify-token"
        hx-ext='json-enc' hx-vals='{"email": "{{ email }}"}'>
    Nochmal schicken
    </button>
    {% else %}
    <h3>{{ error }}</h3>
