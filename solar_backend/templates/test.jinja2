{% extends "base.jinja2" %}
{% block title %}Email verifizieren{% endblock %}
{% block content %}
    <div id="add" class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2 class="mt-10 text-3xl font-bold leading-9 tracking-tight">TEST</h2>
    </div>
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <div hx-ext="response-targets">
    <div id="response-div"></div>
    <button hx-post="/post_test"
            hx-target="#add"
            hx-target-5*="#serious-errors"
            hx-target-422="#not-found">
        Register!
    </button>
    <div id="serious-errors"></div>
    <div id="not-found"></div>
</div>
    

{% endblock %}